{% extends 'main.twig' %}

{% block link %}

    <link rel="stylesheet" type="text/css" href="../css/starter-temp.css">

{% endblock link %}

{% block content %}

    <div class="container pt-3">
    <div class="space">
    	<form>
  			<div class="form-group row justify-content-center">
  				<div class="col-6">
    				<label for="exampleInputEmail1" class="row justify-content-center">Name</label>
    				<input type="name" class="form-control" id="name" aria-describedby="name" placeholder="Full Name">
    			</div>
    		</div>
    		<div class="form-group row justify-content-center">
  				<div class="col-6">
    				<label for="exampleInputEmail1" class="row justify-content-center">Email address</label>
    				<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email">
    			</div>
    		</div>
    		<div class="form-group row justify-content-center">
  				<div class="col-6">
    				<label for="exampleTextarea" class="row justify-content-center">Comment</label>
    				<textarea class="form-control" id="exampleTextarea" rows="8" placeholder="Leave Comment"></textarea>
    			</div>
    		</div>
    		<div class="d-flex justify-content-center">
    		<button type="submit" class="btn btn-primary justify-content-center">Submit</button>
    		</div>
    	</form>
    </div>
	</div>

{% endblock content %}

   